<UserScreen>:
    canvas.before:
        Color:
            rgba: 255, 255, 255, 1
        Rectangle:
            pos:self.pos
            size:self.size
    name: 'User Overview'
    RelativeLayout:
        id: layout
        Image:
            id: trainer
            source: 'data/user.jpg'
            pos_hint: {'center_x':0.7,'center_y':0.3}
        MDLabel:
            id: title
            text: 'User Overview'
            font_style: 'H2'
            bold: True
            adaptive_height: True
            font_name: 'data/font/Nunito-Bold.ttf'
            text_color: [0.22, 0.2, 0.27, 0.5]
            pos_hint: {"center_x": .53, "center_y": 0.9}
        MDCard:
            orientation: "vertical"
            padding: "8dp"
            size_hint: None, None
            size: "480dp", "480dp"
            pos_hint: {"center_x": .66, "center_y": 0.58}
            border_radius: 20
            radius: [15]
            RelativeLayout:
                MDLabel:
                    text: 'Diagnostics'
                    theme_text_color: "Secondary"
                    font_style: 'H6'
                    bold: True
                    adaptive_height: True
                    pos_hint:{'center_x':.5,'center_y':.95}
                    font_name: 'data/font/Nunito-Bold.ttf'
                    text_color: [0.22, 0.2, 0.27, 0.5]
                MDSeparator:
                    height: "1dp"
                    pos_hint:{'center_x':.5,'center_y':.9}
                Image:
                    id: ld
        MDCard:
            orientation: "vertical"
            padding: "8dp"
            size_hint: None, None
            size: "570dp", "480dp"
            pos_hint: {"center_x": .3, "center_y": 0.58}
            border_radius: 20
            radius: [15]
            RelativeLayout:
                MDLabel:
                    text: 'Profile'
                    theme_text_color: "Secondary"
                    font_style: 'H6'
                    bold: True
                    adaptive_height: True
                    pos_hint:{'center_x':.5,'center_y':.95}
                    font_name: 'data/font/Nunito-Bold.ttf'
                    text_color: [0.22, 0.2, 0.27, 0.5]
                MDSeparator:
                    height: "1dp"
                    pos_hint:{'center_x':.5,'center_y':.9}
                MDTextField:
                    id: first_name
                    hint_text: "First Name"
                    mode: "fill"
                    pos_hint:{'center_x':.25,'center_y':.75}
                    size_hint:0.4, 0.15
                    font_name: 'data/font/Nunito-Bold.ttf'
                    text_color: [0.22, 0.2, 0.27, 0.5]
                    line_color_focus: 0.95, 0.94, 0.98, 1
                MDTextField:
                    id: last_name
                    hint_text: "Name"
                    mode: "fill"
                    pos_hint:{'center_x':.75,'center_y':.75}
                    size_hint:0.4, 0.15
                    font_name: 'data/font/Nunito-Bold.ttf'
                    text_color: [0.22, 0.2, 0.27, 0.5]
                    line_color_focus: 0.95, 0.94, 0.98, 1
                MDTextField:
                    id: age
                    hint_text: "Age"
                    mode: "fill"
                    pos_hint:{'center_x':.25,'center_y':.55}
                    size_hint:0.4, 0.15
                    font_name: 'data/font/Nunito-Bold.ttf'
                    text_color: [0.22, 0.2, 0.27, 0.5]
                    line_color_focus: 0.95, 0.94, 0.98, 1
                MDTextField:
                    id: gender
                    hint_text: "Gender"
                    mode: "fill"
                    pos_hint:{'center_x':.75,'center_y':.55}
                    size_hint:0.4, 0.15
                    font_name: 'data/font/Nunito-Bold.ttf'
                    text_color: [0.22, 0.2, 0.27, 0.5]
                    line_color_focus: 0.95, 0.94, 0.98, 1
                MDTextField:
                    id: height
                    hint_text: "Height"
                    mode: "fill"
                    pos_hint:{'center_x':.25,'center_y':.35}
                    size_hint:0.4, 0.15
                    font_name: 'data/font/Nunito-Bold.ttf'
                    text_color: [0.22, 0.2, 0.27, 0.5]
                    line_color_focus: 0.95, 0.94, 0.98, 1
                MDTextField:
                    id: weight
                    hint_text: "Weight"
                    mode: "fill"
                    pos_hint:{'center_x':.75,'center_y':.35}
                    size_hint:0.4, 0.15
                    font_name: 'data/font/Nunito-Bold.ttf'
                    text_color: [0.22, 0.2, 0.27, 0.5]
                    line_color_focus: 0.95, 0.94, 0.98, 1
                MDTextField:
                    id: comment
                    hint_text: "Comment"
                    mode: "fill"
                    pos_hint:{'center_x':.5,'center_y':.15}
                    size_hint:0.9, 0.15
                    font_name: 'data/font/Nunito-Bold.ttf'
                    text_color: [0.22, 0.2, 0.27, 0.5]
                    line_color_focus: 0.95, 0.94, 0.98, 1
        MDCard:
            orientation: "vertical"
            padding: "8dp"
            size_hint: None, None
            size: "125dp", "145dp"
            pos_hint: {"center_x": .19, "center_y": 0.2}
            border_radius: 20
            radius: [15]
            MDFloatingActionButton:
                id: video1
                icon: "play"
                md_bg_color: app.theme_cls.primary_color
                size: "50dp", "50dp"
                pos_hint:{'center_x':0.2, 'center_y':-0.5}
                disabled: True
                on_press:
                    root.play_exercise(2)
            MDFloatingActionButton:
                icon: "plus"
                md_bg_color: app.theme_cls.primary_color
                size: "50dp", "50dp"
                pos_hint: {'center_x':0.8}
                on_press:
                    root.record_exercise(2)
            MDLabel:
                text: "Test 1"
                theme_text_color: "Secondary"
                font_style: 'Subtitle1'
                bold: True
                adaptive_height: True
                font_name: 'data/font/Nunito-Bold.ttf'
                text_color: [0.22, 0.2, 0.27, 0.5]
        MDCard:
            orientation: "vertical"
            padding: "8dp"
            size_hint: None, None
            size: "125dp", "145dp"
            pos_hint: {"center_x": .30, "center_y": 0.2}
            border_radius: 20
            radius: [15]
            MDFloatingActionButton:
                id: video2
                icon: "play"
                md_bg_color: app.theme_cls.primary_color
                size: "50dp", "50dp"
                pos_hint:{'center_x':0.2}
                disabled: True
                on_press:
                    root.play_exercise(3)
            MDFloatingActionButton:
                icon: "plus"
                md_bg_color: app.theme_cls.primary_color
                size: "50dp", "50dp"
                pos_hint: {'center_x':0.8}
                on_press:
                    root.record_exercise(3)
            MDLabel:
                text: "Test 2"
                theme_text_color: "Secondary"
                font_style: 'Subtitle1'
                bold: True
                adaptive_height: True
                font_name: 'data/font/Nunito-Bold.ttf'
                text_color: [0.22, 0.2, 0.27, 0.5]
        MDCard:
            orientation: "vertical"
            padding: "8dp"
            size_hint: None, None
            size: "125dp", "145dp"
            pos_hint: {"center_x": .41, "center_y": 0.2}
            border_radius: 20
            radius: [15]
            MDFloatingActionButton:
                id: video3
                icon: "play"
                md_bg_color: app.theme_cls.primary_color
                size: "50dp", "50dp"
                pos_hint:{'center_x':0.2}
                on_press:
                    root.play_exercise(4)
                disabled: True
            MDFloatingActionButton:
                icon: "plus"
                md_bg_color: app.theme_cls.primary_color
                size: "400dp", "200dp"
                pos_hint:{'center_x':0.8}
                on_press:
                    root.record_exercise(4)
            MDLabel:
                text: "Test 3"
                theme_text_color: "Secondary"
                font_style: 'Subtitle1'
                bold: True
                adaptive_height: True
                font_name: 'data/font/Nunito-Bold.ttf'
                text_color: [0.22, 0.2, 0.27, 0.5]
        MDFloatingActionButton:
            icon: "check"
            md_bg_color: app.theme_cls.primary_color
            size: "400dp", "200dp"
            pos_hint: {'center_x':0.9,'center_y':0.1}
            on_press:
                root.deselect_current()
        MDFloatingActionButton:
            icon: "delete"
            md_bg_color: app.theme_cls.primary_color
            size: "400dp", "200dp"
            pos_hint: {'center_x':0.1,'center_y':0.1}
            on_press:
                root.delete_user()
                root.manager.set_current("list")
        MDFillRoundFlatButton:
            id: startButton
            text: 'Products'
            font_style: 'H5'
            pos_hint: {'center_x':0.66,'center_y':0.2}
            font_name: 'data/font/Nunito-Bold.ttf'
            size_hint: 0.25, 0.15
            on_release: root.manager.set_current("products")
