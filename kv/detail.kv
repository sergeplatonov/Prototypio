<Detail>:
    canvas.before:
        Color:
            rgba: 255, 255, 255, 1
        Rectangle:
            pos:self.pos
            size:self.size
    name: 'Detail'
    orientation: 'vertical'
    spacing: 10
    padding: 10
    md_bg_color: 0, 1, 1, 1
    Image:
        id: imageDetail
        pos_hint: {'center_x':0.7,'center_y':0.5}
    MDCard:
        id: DetailCard
        orientation: "vertical"
        padding: "8dp"
        bg_color : [0.95, 0.94, 0.98, 0.8]
        size_hint: None, None
        size: "450dp", "500dp"
        pos_hint: {"center_x": .26, "center_y": 0.54}
        border_radius: 20
        radius: [15]
        MDBoxLayout:
            id: cambox
            orientation: "vertical"
            adaptive_height: True
            spacing: "23dp"
            padding: "10dp", "10dp", "10dp", "10dp"
            MDLabel:
                id: title
                font_style: 'H2'
                bold: True
                adaptive_height: True
                font_name: 'data/font/Nunito-Bold.ttf'
                text_color: [0.22, 0.2, 0.27, 0.5]
            MDSeparator:
                height: "1dp"
            MDLabel:
                id: camtext
                font_style: 'H6'
                bold: True
                adaptive_height: True
                height: 1000
                font_name: 'data/font/Nunito-Bold.ttf'
                text_color: [0.22, 0.2, 0.27, 0.5]
            MDLabel:
                id: preptext
                font_style: 'H6'
                bold: True
                height: 1000
                adaptive_height: True
                font_name: 'data/font/Nunito-Bold.ttf'
                text_color: [0.22, 0.2, 0.27, 0.5]
            MDLabel:
                id: cmdtext
                font_style: 'H6'
                bold: True
                adaptive_height: True
                font_name: 'data/font/Nunito-Bold.ttf'
                text_color: [0.22, 0.2, 0.27, 0.5]
    MDFloatingActionButton:
        id: buttonStart
        icon: "play"
        md_bg_color: app.theme_cls.primary_color
        size: "400dp", "200dp"
        pos_hint: {'center_x':0.1,'center_y':0.1}
        on_press:
            root.manager.set_current("rec")
        disabled: False
    MDFloatingActionButton:
        id: buttonStop
        icon: "stop"
        md_bg_color: app.theme_cls.primary_color
        size: "400dp", "200dp"
        pos_hint: {'center_x':0.3,'center_y':0.1}
        disabled: True
    MDFloatingActionButton:
        icon: "arrow-left"
        md_bg_color: app.theme_cls.primary_color
        size: "400dp", "200dp"
        pos_hint: {'center_x':0.9,'center_y':0.1}
        on_press:
            root.deselect_exercise()
            root.manager.set_current("user")
